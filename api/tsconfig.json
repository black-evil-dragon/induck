{
    "compilerOptions": {
        /* Базовые настройки */
        "target": "es2022",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDirs": [
            "./src",
        ],
        /* Алиасы для модулей */
        "baseUrl": "./src",
        "paths": {
            "@modules/*": [
                "modules/*"
            ],
            "@core/*": [
                "core/*"
            ],
            // "@tests/*": [
            //     "../tests/*"
            // ]
        },
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        /* Настройки модулей */
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        /* Строгая типизация */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        /* Дектораторы (если используете) */
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        /* Оптимизации */
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}